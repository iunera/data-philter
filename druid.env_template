# Druid MCP Server settings

# DRUID_AUTH_USERNAME
# The username for authenticating with your Druid cluster.
DRUID_AUTH_USERNAME=

# DRUID_AUTH_PASSWORD
# The password for authenticating with your Druid cluster.
DRUID_AUTH_PASSWORD=

# DRUID_ROUTER_URL
# The URL of your Druid router (e.g., https://druid.example.com).
DRUID_ROUTER_URL=

# DRUID_SSL_ENABLED
# Set to `true` to enable SSL/TLS for the connection to Druid, or `false` to disable it.
DRUID_SSL_ENABLED=

# DRUID_EXTENSION_DRUID_BASIC_SECURITY_ENABLED
# Set to `true` if your Druid cluster uses the basic security extension.
DRUID_EXTENSION_DRUID_BASIC_SECURITY_ENABLED=false

# DRUID_MCP_SECURITY_OAUTH2_ENABLED
# Set to `true` to enable OAuth2 security for the MCP server.
DRUID_MCP_SECURITY_OAUTH2_ENABLED=false

# DRUID_MCP_READONLY_ENABLED
# Set to `true` to enable read-only mode, which prevents any changes to your Druid cluster.
# By default, the server runs in read-only mode to prevent accidental changes to your Druid cluster.
DRUID_MCP_READONLY_ENABLED=true