# Use Ubuntu 22.04 as the base image
FROM ubuntu:24.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies for the install script and for installing Docker CLI
RUN apt-get update && apt-get install -y \
    curl \
    sudo \
    git \
    gnupg \
    lsb-release \
    ca-certificates

# Install Docker CLI
RUN mkdir -p /etc/apt/keyrings
RUN curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg
RUN echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null
RUN apt-get update && apt-get install -y docker-ce-cli

# Create a non-root user 'testuser' and add it to the sudo group
RUN useradd -m -s /bin/bash testuser
RUN usermod -aG sudo testuser
# Allow 'testuser' to use sudo without a password for test automation
RUN echo "testuser ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

# Switch to the non-root user
USER testuser
WORKDIR /home/testuser


# The default command is to start a bash session
CMD ["/bin/bash"]
